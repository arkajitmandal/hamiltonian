{
  "name": "hamiltonian",
  "version": "0.0.0",
  "description": "A TISE solver",
  "homepage": "https://github.com/arkajitmandal/solveTISE",
  "author": {
    "name": "Arkajit Mandal",
    "email": "arkajitmandal@gmail.com",
    "url": "http://sas.rochester.edu/chm/groups/huo/arkajit-mandal/"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "Quantum"
  ],
  "devDependencies": {
    "nsp": "^2.6.3",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.18.2",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "xo",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 90,
          "singleQuote": true
        }
      ]
    }
  },
  "repository": "arkajitmandal/hamiltonian",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "Apache-2.0"
}
